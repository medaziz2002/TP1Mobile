<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/background"
            tools:context=".MainActivity">

            <!-- Champ Départ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_background"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Départ"
                    android:src="@drawable/ic_depart" />

                <EditText
                    android:id="@+id/input_depart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/depart"
                    android:paddingStart="12dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Liste des suggestions Départ -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_suggestions_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- Bouton "Activer la Localisation" -->
            <LinearLayout
                android:id="@+id/section_turn_on_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:elevation="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Localisation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/turn_on_location"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_suggestion"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Champ Arrivée -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_background"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Arrivée"
                    android:src="@drawable/ic_arrivee" />

                <EditText
                    android:id="@+id/input_arrivee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/arrivee"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Liste des suggestions Arrivée -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_suggestions_arrivee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- Section Activer la Localisation (après Arrivée) -->
            <LinearLayout
                android:id="@+id/section_localisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Localisation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/turn_on_location"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_suggestion"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Liste des horaires -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_horaires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <!-- Bouton Rechercher -->
            <Button
                android:id="@+id/btn_rechercher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/primary"
                android:elevation="6dp"
                android:text="@string/rechercher"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
