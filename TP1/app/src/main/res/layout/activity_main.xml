<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MainActivity">

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Bouton pour ouvrir le menu latéral -->
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☰"
            android:textSize="16sp"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:layout_margin="16dp"
            android:layout_gravity="end" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textSize="24sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="16dp" />

                <!-- Champ Nom -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nom"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/input_nom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_nom"
                    android:textColor="#2C3E50"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"
                    android:inputType="textPersonName" />

                <!-- Champ Prénom -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_prenom"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/input_prenom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_prenom"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"
                    android:textColor="#2C3E50"
                    android:inputType="textPersonName" />

                <!-- Champ Âge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_age"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/input_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_age"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp"
                    android:textColor="#2C3E50"
                    android:inputType="number" />

                <!-- Champ Domaine de Compétences -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_domaine"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_domaine"
                    android:layout_width="match_parent"
                    android:textColor="#2C3E50"
                    android:background="@drawable/rounded_input"
                    android:layout_height="50dp" />

                <!-- Sélection du pays -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_pays"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_pays"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#2C3E50"
                    android:background="@drawable/rounded_input"
                    android:padding="12dp" />

                <!-- Champ Numéro de Téléphone -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_telephone"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/input_code_pays"
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:hint="@string/label_code_pays"
                        android:background="@drawable/rounded_input"
                        android:padding="12dp"
                        android:textColor="#2C3E50"
                        android:inputType="phone"
                        android:focusable="false"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/input_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/hint_telephone"
                        android:textColor="#2C3E50"
                        android:background="@drawable/rounded_input"
                        android:padding="12dp"
                        android:inputType="phone" />
                </LinearLayout>

                <!-- Bouton Valider -->
                <Button
                    android:id="@+id/btn_valider"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/valider"
                    android:textSize="18sp"
                    android:backgroundTint="#3498DB"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="8dp"
                    android:elevation="4dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menu latéral (NavigationView) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
